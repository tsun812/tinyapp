<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
      <% if(username !== "" && username !== undefined){ %>
      <form class="form-inline" action="/urls/logout" method="POST">
      <p>Log in as: <%=username%><button type="submit" class="btn btn-primary">Log out</button></form></p>
      <!-- <p>Log in as: <%=username%><input type="submit" name="submit-button" value="Logout"></form></p> -->
      <%} else {%>
        <form method="POST" action="/urls/login" class="form-inline"> 
          <input class="form-control" type="text" name="username"  style="width: 100px; margin: 1em">
          <button type="submit">Login</button>
        </form>
      <% } %>
  
  </nav>
</header>